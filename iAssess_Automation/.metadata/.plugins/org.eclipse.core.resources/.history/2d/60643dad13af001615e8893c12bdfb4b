package com.myvidessa.impl;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import com.myvidessa.locator.MyvidessaLoginLocator;

public class MyvidessaLoginImpl implements MyvidessaLoginHelperImpl {

	@Override
	public void performLogin(WebDriver driver, String username, String password) {
		driver.findElement(By.id(MyvidessaLoginLocator.LOGIN_USERNAME_ID)).clear();
		driver.findElement(By.id(MyvidessaLoginLocator.LOGIN_USERNAME_ID)).sendKeys(username);
		driver.findElement(By.id(MyvidessaLoginLocator.LOGIN_PASSWORD_ID)).sendKeys(password);
		driver.findElement(By.className(MyvidessaLoginLocator.LOGIN_SIGNIN_BTN_CLASS)).click();
	}

	@Override
	public void performLogout(WebDriver driver) throws InterruptedException {
		driver.findElement(By.className(MyvidessaLoginLocator.PROFILE_MENU_CLASS)).click();
		Thread.sleep(1000);
		driver.findElement(By.id(MyvidessaLoginLocator.LOGOUT_LINK_ID)).click();

	}

}
